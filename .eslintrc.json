{
  "extends": "standart-with-typescript",
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "plugins": [
    "import-helpers"
  ],
  "rules": {
    "@typescript-eslint/strict-boolean-expressions": "off",
    "import-helpers/order-imports": [
      "warn",
      { // example configuration
        "newlinesBetween": "always",
        "groups": [
          "module",
          "/^@/",
          [
            "parent",
            "sibling",
            "index"
          ],
          "/^jest/"
        ],
        "alphabetize": {
          "order": "asc",
          "ignoreCase": true
        }
      }
    ]
  }
}
